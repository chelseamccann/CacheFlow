<!DOCTYPE html>
<html>
  <head>
    <title>CacheFlow</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <script type="text/javascript">
      window.splash = "<%= image_url('splash.png') %>"; 
      window.cash_management = "<%= image_url('cash_management.png') %>"; 
      window.stocks = "<%= image_url('stocks.svg') %>"; 
      window.etfs = "<%= image_url('etfs.png') %>"; 
      window.options = "<%= image_url('options.svg') %>"; 
      window.cryptos = "<%= image_url('cryptos.svg') %>"; 
      window.manual = "<%= image_url('no_manual.png') %>"; 
      window.phones = "<%= image_url('phones.png') %>"; 
      window.market = "<%= image_url('market.png') %>"; 
      window.sipc = "<%= image_url('sipc.png') %>";
    </script>

    <% if current_user %>
      <script>
        window.currentUser = {
          "id": <%= current_user.id %>,
          "email": "<%= current_user.email %>"
        };
      </script>
    <% end %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
